<p>
 <h2>Showing all posts</h2>
 <h4><%= pluralize(@posts.count, 'post') %> in all</h4>
</p>

 <% @posts.each do |post| %>
    <article class="clearfix <%= cycle('even', 'odd') %>">
    <% if post.is_draft == 'yes'%>
    <span class="infotags">draft</span>
    <% end %>

    <h2><%= post.title %> </h2>
    <% post.categories.each do |cat| %>
    <span class="infotags"><%= (cat.title) unless cat.title.empty? %></span>&nbsp;
    <% end %>
    <p>
        <%= markdown(post.content) %>
        <% post.attachments.each do |at| %>
         <% if at.picture.present? %>
            <%= image_tag at.picture.url(:thumb) %>
            <%= at.picture.url(:original) %>
         <% end %>
        <% end %>

    </p>

    <%= link_to "Edit Post", edit_post_path(post) %> |
    <%= link_to "Destroy", post_path(post), method: :delete, data: {confirm: "Delete Post?"} %>
    </article>

 <% end %>
